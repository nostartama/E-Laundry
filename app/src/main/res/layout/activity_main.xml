<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@mipmap/background"
            >

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tiora.e_laundry.MainActivity"
    android:orientation="vertical"
    android:layout_margin="20dp"
    >


        <ImageView
            android:layout_width="268dp"
            android:layout_height="97dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo"

            />




    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="#fff"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/tv_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="KG"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">


        <TextView
            android:id="@+id/tv_bedcover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bedcover"
            android:textAlignment="center"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.00"
            >
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="43dp"
                android:layout_height="37dp"
                android:onClick="decreaseBedcover"
                android:src="@mipmap/if_minus_1645995"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30dp"
                android:id="@+id/bedcoverQty"
                android:textAlignment="center"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="43dp"
                android:layout_height="37dp"
                android:onClick="increaseBedcover"
                android:src="@mipmap/if_plus_1646001"
                android:layout_weight="1"/>

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/tv_selimut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.26"
            android:gravity="center"
            android:text="Selimut"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="43dp"
                android:layout_height="37dp"
                android:onClick="decreaseBlanket"
                android:src="@mipmap/if_minus_1645995"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/blanketQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="30dp" />

            <ImageView
                android:layout_width="43dp"
                android:layout_height="37dp"
                android:onClick="increaseBlanket"
                android:src="@mipmap/if_plus_1646001"
                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:gravity="right"
    android:orientation="horizontal">

        <com.example.tiora.e_laundry.ToggleGroup
            android:id="@+id/deal_detail_toolbar"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_alignParentBottom="true">

            <ToggleButton
                android:id="@+id/kilat"
                android:textOn="@string/kilat"
                android:textOff="@string/kilat"
                android:textSize="10sp"
                android:checked="true"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                />

            <ToggleButton
                android:id="@+id/express"
                android:textOn="@string/express"
                android:textOff="@string/express"
                android:textSize="10sp"
                android:checked="true"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                  />

            <ToggleButton
                android:id="@+id/normal"
                android:textOn="@string/normal"
                android:textOff="@string/normal"
                android:textSize="10sp"
                android:checked="true"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                  />




        </com.example.tiora.e_laundry.ToggleGroup>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="right">


            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.0"
                android:id="@+id/total"
                android:layout_gravity="center"
                android:textSize="40dp"
                />


            <Button
                android:id="@+id/maju"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                android:textSize="20dp"
                android:padding="20dp"
                android:layout_gravity="center"
                android:onClick="Order"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
    </TableLayout>
</ScrollView>